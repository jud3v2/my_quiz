{% extends 'base.html.twig' %}

{% block title %}Résultat du Quizz{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Résultat du Quizz: {{ name }}</h1>
                <h2 class="text-center">Bonjour </h2>
                <h3 class="text-center">Vous avez obtenu {{ score }} / {{ total }}</h3>
                <div class="text-center">
                    <a href="{{ path('quizz', {id: quizzId}) }}" class="text-center mx-auto w-1/2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded hover:shadow-sm">Refaire le Quizz</a>
                </div>
            </div>
            <!---Faire en sorte d'afficher chaque question ainsi que les réponse de l'utilisateur -->
        </div>
    </div>

{% endblock %}