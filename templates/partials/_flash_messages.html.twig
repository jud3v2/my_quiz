{% for type, messages in app.flashes %}
    {% if type is same as 'success' %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative m-3" role="alert">
            <strong class="font-bold">Succ√®s</strong>
            <ul>
                {% for message in messages %}
                    <li>
                        <span class="block sm:inline">{{ message }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if type is same as 'error' %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative m-3" role="alert">
            <strong class="font-bold">Erreur</strong>
            <ul>
                {% for message in messages %}
                    <li>
                        <span class="block sm:inline">{{ message }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if type is same as 'warning' %}

    {% endif %}
    {% if type is same as 'info' %}
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative m-3" role="alert">
            <strong class="font-bold">Informations</strong>
            <ul>
                {% for message in messages %}
                    <li>
                        <span class="block sm:inline">{{ message }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endfor %}