{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

   <div class="container mx-auto">
        <h1 class="font-bold my-5 text-xl text-center">Formulaire d'enregistrement</h1>
       {% form_theme registrationForm 'tailwind_2_layout.html.twig' %}
       {{ form_errors(registrationForm) }}

       {{ form_start(registrationForm) }}
       <div class="grid grid-cols-3 gap-4">
           {{ form_row(registrationForm.username, {
               label: 'Nom d\'utilisateur',
               attr: {
                   placeholder: 'Renseignez votre nom d\'utilisateur',
                   class: 'border w-full rounded p-2'
               }
           }) }}
           {{ form_row(registrationForm.lastname, {
               label: 'Nom',
               attr: {
                   placeholder: 'Votre nom',
                   class: 'border w-full rounded p-2'
               }
           }) }}
           {{ form_row(registrationForm.firstname, {
               label: 'Prénom',
               attr: {
                   placeholder: 'Votre prénom',
                   class: 'border w-full rounded p-2'
               }
           }) }}
       </div>
       <div class="grid grid-cols-2 gap-4">
           {{ form_row(registrationForm.plainPassword, {
               label: 'Mot de passe',
               attr: {
                   placeholder: 'Votre mot de passe',
                   class: 'border w-full rounded p-2'
               }
           }) }}
           {{ form_row(registrationForm.email, {
               label: 'Adresse email',
               attr: {
                   placeholder: 'Votre adresse email',
                   class: 'border w-full rounded p-2'
               }
           }) }}
       </div>
           {{ form_row(registrationForm.agreeTerms, {
               label: 'Accepter les conditions d\'utilisation',
               attr: {
                   class: 'w-full rounded p-2'
               }
           }) }}
       <button type="submit" class="rounded p-2 text-white font-bold bg-blue-500 hover:bg-blue-700 shadow-sm hover:shadow">S'enregistrer</button>
       {{ form_end(registrationForm) }}
   </div>
{% endblock %}
