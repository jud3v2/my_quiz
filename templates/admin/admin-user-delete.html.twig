{% extends 'admin.html.twig' %}

{% block title %} Administration {% endblock %}

{% block body %}
    <div>
        <div
                class="bg-zinc-50 px-6 py-20 text-center text-surface dark:bg-neutral-700 dark:text-white">
            <h1 class="mb-6 text-5xl font-bold">Administration gestion de la suppression de l'utilisateur</h1>
        </div>
        <div>
            <p class="text-red-600">En cliquant sur le bouton ci-dessous, vous allez supprimer l'utilisateur <strong>{{ user.username }}</strong></p>.
        </div>
        <a href="{{ path('admin.users.delete', {uuid: user.getUserIdentifier}) }}">
            <button type="button" class="bg-blue-500 rounded p-2 text-white">
                Supprimer l'utilisateur
            </button>
        </a>
    </div>
{% endblock %}
